{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "properties": {
        "forge": {
            "type": "object",
            "properties": {
                "entryPoint": {
                    "type": "string"
                },
                "domain": {
                    "type": "string"
                },
                "baseURL": {
                    "type": "string"
                },
                "https": {
                    "type": "boolean"
                },
                "image": {
                    "type": "string"
                },
                "registry": {
                    "type": "string"
                },
                "registrySecrets":{
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "dbUsername": {
                    "type": "string"
                },
                "dbPassword": {
                    "type": "string"
                },
                "email": {
                    "type": "object",
                    "properties":{
                        "from": {
                            "type": "string"
                        },
                        "smtp": {
                            "type": "object",
                            "properties":{
                                "host": {
                                    "type": "string"
                                },
                                "port": {
                                    "type": "integer"
                                },
                                "tls": {
                                    "type": "boolean"
                                },
                                "user": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "host"
                            ]
                        },
                        "ses": {
                            "type": "object",
                            "properties": {
                                "region": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "region"
                            ]
                        }
                    }
                },
                "cloudProvider": {
                    "type": "string"
                },
                "aws": {
                    "type": "object",
                    "properties":{
                        "IAMRole": {
                            "type": "string"
                        }
                    }
                },
                "localPostgresql": {
                    "type": "boolean"
                },
                "postgres": {
                    "type": "object",
                    "properties":{
                        "host": {
                            "type": "string"
                        },
                        "port": {
                            "type": "integer"
                        }
                    },
                    "required": [
                        "host"
                    ]
                },
                "projectNamespace": {
                    "type": "string"
                },
                "projectSelector": {
                    "type": "object"
                },
                "managementSelector": {
                    "type": "object"
                },
                "ee": {
                    "type": "object",
                    "properties": {
                        "billing": {
                            "type": "object",
                            "properties": {
                                "stripe": {
                                    "type": "object",
                                    "properties": {
                                        "key": {
                                            "type": "string"
                                        },
                                        "wh_secret": {
                                            "type": "string"
                                        },
                                        "team_price": {
                                            "type": "string"
                                        },
                                        "team_product": {
                                            "type": "string"
                                        },
                                        "project_price": {
                                            "type": "string"
                                        },
                                        "project_product": {
                                            "type": "string"
                                        },
                                        "teams": {
                                            "type": "object"
                                        }
                                    },
                                    "required": [
                                        "key",
                                        "wh_secret",
                                        "team_price",
                                        "team_product",
                                        "project_price",
                                        "project_product"
                                    ]
                                }
                            },
                            "required": [
                                "stripe"
                            ]
                        }
                    },
                    "required": [
                        "billing"
                    ]
                },
                "broker": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "url": {
                            "type" : "string"
                        },
                        "public_url": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "enabled"
                    ]
                },
                "telemetry": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "plausible": {
                            "type": "string"
                        },
                        "posthog": {
                            "type": "object",
                            "properties": {
                                "apikey": {
                                    "type": "string"
                                },
                                "capture_pageview": {
                                    "type": "boolean"
                                }
                            },
                            "required": [
                                "apikey"
                            ]
                        }
                    }
                },
                "fileStore": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "type": {
                            "type": "string"
                        },
                        "options": {
                            "type": "object"
                        }
                    },
                    "required": [
                        "enabled"
                    ],
                    "if": {
                        "properties": {
                            "enabled": {
                                "enum": [ true ]
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "type",
                            "options"
                        ]
                    } 
                    
                }
            },
            "required": [
                "domain"
            ],
            "if": {
                "properties": {
                    "localPostgresql": {
                        "enum": [ false ]
                    }
                }
            },
            "then": {
                "required": [
                    "postgres"
                ]
            }
        }
    },
    "required": [
        "forge"
    ],
    "title": "Values",
    "type": "object"
}