{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "properties": {
        "forge": {
            "type": "object",
            "properties": {
                "entryPoint": {
                    "type": "string"
                },
                "domain": {
                    "type": "string",
                    "pattern": "^([a-z0-9]+(-[a-z0-9]+)*\\.)+[a-z]{2,25}$"
                },
                "baseURL": {
                    "type": "string"
                },
                "https": {
                    "type": "boolean"
                },
                "image": {
                    "type": "string"
                },
                "registry": {
                    "type": "string"
                },
                "registrySecrets":{
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "dbUsername": {
                    "type": "string"
                },
                "dbPassword": {
                    "type": "string"
                },
                "dbName": {
                    "type": "string"
                },
                "email": {
                    "type": "object",
                    "properties":{
                        "from": {
                            "type": "string"
                        },
                        "smtp": {
                            "type": "object",
                            "properties":{
                                "host": {
                                    "type": "string"
                                },
                                "port": {
                                    "type": "integer"
                                },
                                "tls": {
                                    "type": "boolean"
                                },
                                "user": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "host"
                            ]
                        },
                        "ses": {
                            "type": "object",
                            "properties": {
                                "region": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "region"
                            ]
                        }
                    }
                },
                "cloudProvider": {
                    "type": "string"
                },
                "aws": {
                    "type": "object",
                    "properties":{
                        "IAMRole": {
                            "type": "string"
                        }
                    }
                },
                "localPostgresql": {
                    "type": "boolean"
                },
                "postgres": {
                    "type": "object",
                    "properties":{
                        "host": {
                            "type": "string"
                        },
                        "port": {
                            "type": "integer"
                        },
                        "ssl": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "host"
                    ]
                },
                "projectNamespace": {
                    "type": "string"
                },
                "projectSelector": {
                    "type": "object"
                },
                "projectDeploymentTolerations": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "effect": {
                                "type": "string"
                            },
                            "key": {
                                "type": "string"
                            },
                            "operator": {
                                "type": "string"
                            },
                            "value": {
                                "type": "string"
                            }
                        },
                        "required": ["effect", "key", "operator", "value"]
                    },
                    "default": []
                },
                "managementSelector": {
                    "type": "object"
                },
                "affinity": {
                    "type": "object"
                },
                "ee": {
                    "type": "object",
                    "properties": {
                        "billing": {
                            "type": "object",
                            "properties": {
                                "stripe": {
                                    "type": "object",
                                    "properties": {
                                        "key": {
                                            "type": "string"
                                        },
                                        "wh_secret": {
                                            "type": "string"
                                        },
                                        "team_price": {
                                            "type": "string"
                                        },
                                        "team_product": {
                                            "type": "string"
                                        },
                                        "project_price": {
                                            "type": "string"
                                        },
                                        "project_product": {
                                            "type": "string"
                                        },
                                        "device_price": {
                                            "type": "string"
                                        },
                                        "device_product": {
                                            "type": "string"
                                        },
                                        "new_customer_free_credit": {
                                            "type": "integer"
                                        },
                                        "teams": {
                                            "type": "object"
                                        }
                                    },
                                    "required": [
                                        "key",
                                        "wh_secret",
                                        "team_price",
                                        "team_product",
                                        "project_price",
                                        "project_product"
                                    ]
                                }
                            },
                            "required": [
                                "stripe"
                            ]
                        }
                    },
                    "required": [
                        "billing"
                    ]
                },
                "broker": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "url": {
                            "type" : "string"
                        },
                        "public_url": {
                            "type": "string"
                        },
                        "affinity": {
                            "type": "object"
                        }
                    },
                    "required": [
                        "enabled"
                    ]
                },
                "telemetry": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "plausible": {
                            "type": "string"
                        },
                        "posthog": {
                            "type": "object",
                            "properties": {
                                "apiurl":{
                                    "type": "string"
                                },
                                "apikey": {
                                    "type": "string"
                                },
                                "capture_pageview": {
                                    "type": "boolean"
                                }
                            },
                            "required": [
                                "apikey"
                            ]
                        },
                        "sentry": {
                            "type": "object",
                            "properties": {
                                "frontend_dsn":{
                                    "type": "string"
                                },
                                "backend_dsn": {
                                    "type": "string"
                                },
                                "production_mode": {
                                    "type": "boolean"
                                },
                                "environment": {
                                    "type": "string"
                                }
                            }
                        },
                        "backend": {
                            "type": "object",
                            "properties": {
                                "prometheus": {
                                    "type": "object",
                                    "properties": {
                                        "enabled": {
                                            "type": "boolean"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "fileStore": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "type": {
                            "type": "string"
                        },
                        "options": {
                            "type": "object"
                        }
                    },
                    "required": [
                        "enabled"
                    ],
                    "if": {
                        "properties": {
                            "enabled": {
                                "enum": [ true ]
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "type",
                            "options"
                        ]
                    }
                },
                "support": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "hubspot": {
                            "type": "integer"
                        }
                    },
                    "if": {
                        "properties": {
                            "enabled": {
                                "enum": [ true ]
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "hubspot"
                        ]
                    }
                },
                "branding": {
                    "type": "object"
                },
                "rateLimits": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "global": {
                            "type": "boolean"
                        },
                        "max": {
                            "type": "integer"
                        },
                        "maxAnonymous": {
                            "type": "integer"
                        },
                        "timeWindow": {
                            "type": "integer"
                        }
                    }
                },
                "contentSecurityPolicy": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "directives": {
                            "type": "object"
                        },
                        "reportOnly": {
                            "type": "boolean"
                        },
                        "reportUri": {
                            "type": "string"
                        }
                    }
                },
                "clusterRole": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "Name of cluster role"
                        }
                    }
                }
            },
            "required": [
                "domain",
                "dbUsername",
                "dbPassword"
            ],
            "if": {
                "properties": {
                    "localPostgresql": {
                        "enum": [ false ]
                    }
                }
            },
            "then": {
                "required": [
                    "postgres"
                ]
            }
        },
        "ingress": {
            "type": "object",
            "properties": {
                "annotations": {
                    "type": "object",
                    "minProperties": 0
                },
                "className": {
                    "type": "string"
                }
            }
        },
        "editors": {
            "type": "object",
            "properties": {
                "serviceAccount": {
                    "type": "object",
                    "properties": {
                        "annotations": {
                            "type": "object",
                            "minProperties": 0
                        },
                        "create": {
                            "type": "boolean"
                        },
                        "name": {
                            "type": "string",
                            "description": "Name of service account (scope of uniqueness is a 'Projects' namespace)"
                        }
                    },
                    "required": ["annotations", "name"]
                }
            },
            "required": ["serviceAccount"]
        }
    },
    "required": [
        "forge"
    ],
    "title": "Values",
    "type": "object"
}
