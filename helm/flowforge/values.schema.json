{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "properties": {
        "forge": {
            "type": "object",
            "properties": {
                "entryPoint": {
                    "type": "string"
                },
                "domain": {
                    "type": "string"
                },
                "baseURL": {
                    "type": "string"
                },
                "https": {
                    "type": "boolean"
                },
                "registry": {
                    "type": "string"
                },
                "registrySecrets":{
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "dbUsername": {
                    "type": "string"
                },
                "dbPassword": {
                    "type": "string"
                },
                "email": {
                    "type": "object",
                    "properties":{
                        "from": {
                            "type": "string"
                        },
                        "smtp": {
                            "type": "object",
                            "properties":{
                                "host": {
                                    "type": "string"
                                },
                                "port": {
                                    "type": "integer"
                                },
                                "tls": {
                                    "type": "boolean"
                                },
                                "user": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "host"
                            ]
                        },
                        "ses": {
                            "type": "object",
                            "properties": {
                                "region": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "region"
                            ]
                        }
                    }
                },
                "cloudProvider": {
                    "type": "string"
                },
                "aws": {
                    "type": "object",
                    "properties":{
                        "IAMRole": {
                            "type": "string"
                        }
                    }
                },
                "localPostgresql": {
                    "type": "boolean"
                },
                "postgres": {
                    "type": "object",
                    "properties":{
                        "host": {
                            "type": "string"
                        },
                        "port": {
                            "type": "integer"
                        }
                    }
                },
                "projectNamespace": {
                    "type": "string"
                },
                "projectSelector": {
                    "type": "object"
                },
                "managementSelector": {
                    "type": "object"
                },
                "ee": {
                    "type": "object",
                    "properties": {
                        "billing": {
                            "type": "object",
                            "properties": {
                                "stripe": {
                                    "type": "object",
                                    "properties": {
                                        "key": {
                                            "type": "string"
                                        },
                                        "wh_secret": {
                                            "type": "string"
                                        },
                                        "team_price": {
                                            "type": "string"
                                        },
                                        "team_product": {
                                            "type": "string"
                                        },
                                        "project_price": {
                                            "type": "string"
                                        },
                                        "project_product": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "key",
                                        "wh_secret",
                                        "team_price",
                                        "team_product",
                                        "project_price",
                                        "project_product"
                                    ]
                                }
                            },
                            "required": [
                                "stripe"
                            ]
                        }
                    },
                    "required": [
                        "billing"
                    ]
                },
                "broker": {
                    "type": "object",
                    "properties": {
                        "url": {
                            "type" : "string"
                        },
                        "public_url": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "url"
                    ]
                }
            },
            "required": [
                "domain"
            ]
        }
    },
    "required": [
        "forge"
    ],
    "title": "Values",
    "type": "object"
}