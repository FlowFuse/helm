{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "properties": {
        "forge": {
            "type": "object",
            "properties": {
                "domain": {
                    "type": "string"
                },
                "baseURL": {
                    "type": "string"
                },
                "registry": {
                    "type": "string"
                },
                "dbUsername": {
                    "type": "string"
                },
                "dbPassword": {
                    "type": "string"
                },
                "email": {
                    "type": "object",
                    "properties":{
                        "from": {
                            "type": "string"
                        },
                        "smtp": {
                            "type": "object",
                            "properties":{
                                "host": {
                                    "type": "string"
                                },
                                "port": {
                                    "type": "integer"
                                },
                                "tls": {
                                    "type": "boolean"
                                },
                                "user": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "host"
                            ]
                        },
                        "ses": {
                            "type": "object",
                            "properties": {
                                "region": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "region"
                            ]
                        }
                    }
                }
            },
            "required": [
                "domain"
            ]
        }
    },
    "required": [
        "forge"
    ],
    "title": "Values",
    "type": "object"
}